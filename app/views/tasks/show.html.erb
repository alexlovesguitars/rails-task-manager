<div class="container">
  <h1 class="mt-5 mb-5">Check your Task</h1>

  <h4 class="mx-2"> <%= @task.title %> </h4>
  <p class="mx-2">  <%= @task.details %> </p>


  <div class="d-flex">
    <div class="mt-5 mx-2">
      <%= button_to "Back to list", tasks_path, method: :get, class: "btn btn-primary" %>
    </div>
    <div class="mx-2 mt-5">
      <%= button_to "Edit this task", edit_task_path, method: :get, class: "btn btn-primary" %>
    </div>
    <div class="mx-2 mt-5">
      <%= button_to 'Delete', task_path(@task), method: :delete, data: { confirm: 'Are you sure?', turbo: false }, class: "btn btn-primary" %>
    </div>
  </div>
</div>
